@using Framework.Web.HtmlHelpers

@model Framework.Models.ReturnListModel<LogR.Code.Models.Logs.AppLog, LogR.Code.Models.Search.AppLogSearchCriteria>

<!-- Full Width Column -->
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                App Logs
                <small>V 2.0</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">App Logs</li>
            </ol>
        </section>

        <!----------Breadcrumb------------>
        <section class="bg row-fluid">
            <div class="col-md-12">
                <div class="row-fluid">
                    @Html.Partial("_Message", @Model)
                    <div class="well clearfix">
                        <form id="frmFilter" action="/app-logs" method="get" onkeypress="return submitForm(event)">
                            <div class="control-group col-md-2">
                                <label class="control-label" for="FromDate">Start Date</label>
                                <div class="controls">
                                    <input class="date row-fluid" id="FromDate" name="FromDate" placeholder="Start Date" value="@Model.Search?.FromDate?.ToShortDateString()" type="text">
                                </div>
                            </div>
                            <div class="control-group col-md-2">
                                <label class="control-label" for="ToDate">End Date</label>
                                <div class="controls">
                                    <input class="date row-fluid" id="ToDate" name="ToDate" placeholder="End Date" value="@Model.Search?.ToDate?.ToShortDateString()" type="text">
                                </div>
                            </div>
                            <div class="control-group col-md-2">
                                <label class="control-label" for="Keyword">Search Word</label>
                                <div class="controls">
                                    <input class="row-fluid" id="Keyword" name="Keyword" placeholder="Search Word" value="@Model.Search.Keyword" type="text">
                                </div>
                            </div>
                            <div class="control-group col-md-2 pull-right">
                                <input id="sortby" name="sortby" value="@Model.Search.SortBy" type="hidden">
                                <input id="sortascending" name="sortascending" value="@Model.Search.SortAscending" type="hidden">
                                <input id="pageSize" name="pageSize" value="@Model.Search.PageSize" type="hidden">
                                <div class="controls pull-right btn-margin-top">
                                    <input type="submit" value="Filter Results" class="btn btn-primary">
                                    <input id="reset" type="reset" value="Reset" class="btn btn-default">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">

                <div class="col-md-12">
                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <th style="width: 5px"><input type="checkbox"></th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "Longdate" }, { "DisplayName", "Date" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "Severity" }, { "DisplayName", "DateSeverity" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "MachineName" }, { "DisplayName", "MachineName" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "App" }, { "DisplayName", "App" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "ProcessId" }, { "DisplayName", "ProcessId" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "ThreadId" }, { "DisplayName", "ThreadId" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "CurrentFunction" }, { "DisplayName", "Function" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "CurrentTag" }, { "DisplayName", "Tag" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "AspnetUserIdentity" }, { "DisplayName", "User" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "RemoteAddress" }, { "DisplayName", "Ip" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "SqlResult" }, { "DisplayName", "SqlResult" } })</th>
                                        <th>@Html.Partial("_SmartLink", Model.Search, new ViewDataDictionary(ViewData) { { "ColumnName", "ElapsedTime" }, { "DisplayName", "ElapsedTime" } })</th>
                                        <th>Message</th>
                                    </tr>
                                    @foreach (var Current in Model.Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox"></td>
                                            <td>@Current.Longdate.ToLocalTime()</td>
                                            <td><span class="label @Html.Partial("_logtypeclass",Current.Severity)">@Current.Severity</span></td>
                                            <td>@Current.MachineName</td>
                                            <td>@Current.App</td>
                                            <td>@Current.ProcessId</td>
                                            <td>@Current.ThreadId</td>
                                            <td>@Current.CurrentFunction</td>
                                            <td>@Current.CurrentTag</td>
                                            <td>@Current.AspnetUserIdentity</td>
                                            <td>@Current.RemoteAddress</td>
                                            <td>@Current.SqlResult</td>
                                            <td>@Current.ElapsedTime</td>
                                            <td>@Current.Message</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer clearfix">
                            @Html.Partial("_Pager", Model.Search)
                        </div>
                    </div>
                    <!-- /.box -->
                </div>

            </div><!-- /.row -->

        </section><!-- /.content -->
    </div><!-- /.container -->
    <div class="control-sidebar-bg" style="position: fixed; height: auto;"></div>
</div><!-- /.content-wrapper -->
